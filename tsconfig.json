{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Habilitar decoradores
    "emitDecoratorMetadata": true, // Emitir metadatos para TypeORM
    "strictPropertyInitialization": false // Desactivar inicializaci√≥n estricta
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}